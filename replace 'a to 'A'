#include <bits/stdc++.h>
#include<string>
using namespace std;
int main (){
    string s;
    cin>>s;
    for(int i=0;i<s.length();i++){
        if(s[i]=='a'){
            s[i]='A';
            break;
        }
    }
    for(int i= s.length()-1;i>=0;i--){
        if(s[i]=='a'){
            s[i]='A';
            break;
        }
    }
    cout<<s;
    return 0;
}
