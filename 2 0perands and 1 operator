#include <bits/stdc++.h>
using namespace std;
int main(){
  double a,b;
  char op;
  cout<<"enter an operands:";
  cin>>a>>b;
  cout<<"enter an operator(+,-,*,/):";
  cin>>op;
  switch(op){
      case'+':
      cout<<"result ="<<a+b;
      break;
      case'-':
      cout<<"result ="<<a-b;
      break;
      case'*':
      cout<<"result ="<<a*b;
      break;
      case'/':
      if(b!=0)
      cout<<"result ="<<a/b;
      else 
      cout<<"division is not allowed"<<endl;
      break;
      default:
      cout<<"invalid operator";
  }
            return 0;
        }
